%h2 Popular Tweets

%form#query_form{:action => '/tweet_search', :method => 'post'}
  %p
    Find hot tweets about
    %input{:type => 'text', :name => 'query'}
    %input{:type => 'submit', :value => 'Search'}
    %span.loading

#tweets

:javascript
  $(function() {
    $('#query_form').ajaxForm({
      target: '#tweets',
      beforeSubmit: function() { $('.loading').text('loading...').fadeIn() },
      success: function() { $('.loading').fadeOut(function() { $(this).text('') }) }
    });
  });
